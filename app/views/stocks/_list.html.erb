<table class="table table-striped">
    <thread>
        <tr>
            <th>Name</th>
            <th>Symbol</th>
            <th>Current price</th>
            <%if @user.id==current_user %>
            <th>Actions</th>
            <% end %>
        </tr>
    </thread>
    <tbody>
       <% @user_stocks.each do |user_stock| %>
       <tr>
           <th><%= user_stock.name %></th>
           <th><%= user_stock.ticker %></th>
           <th><%= user_stock.last_price %></th>
           <% if @user.id==current_user.id %>
           <td><%= link_to "Delete this stock", user_stock_path(user_stock), method: :delete, data:{confirm: "Are you sure?"}, class: "btn btn-xs btn-danger" %></td>
          <% end %>
          </tr>
       <% end %>
    </tbody>
</table>